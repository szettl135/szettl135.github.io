---
import { Image } from 'astro:assets';

const { name, icon, url } = Astro.props as {
  name: string;
  icon: string;
  url?: string;
};
---

<article class="card">
  {url ? (
    <a class="link" href={url} target="_blank" rel="noreferrer">
        <Image width={22} height={22} src={icon} class="icon" alt="" />
        <span class="name">{name}</span>
    </a>
  ) : (
    <div class="link">
        <Image width={22} height={22} src={icon} class="icon" alt="" />
        <span class="name">{name}</span>
    </div>
  )}
</article>

<style>
  .card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 12px 14px;
    background: var(--surface);
  }
  .link {
    display: flex;
    align-items: center;
    gap: 10px;
    color: inherit;
    text-decoration: none;
  }
  .icon { width: 22px; height: 22px; }
  .name { font-weight: 600; }
</style>