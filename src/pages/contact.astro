---
import BaseLayout from '../layouts/BaseLayout.astro';

import Image from 'astro/components/Image.astro';
import profileImg from '../assets/blank-profile.png';
import emailIcon from '../assets/email.svg';
import githubIcon from '../assets/github.svg';
import linkedinIcon from '../assets/linkedin.svg';
---

<BaseLayout>
  <main class="page">
    <section class="container">
      <h1 class="title">Contact me</h1>

      <Image
        src={profileImg}
        alt="Profile picture"
        width={160}
        height={160}
        class="profile-image"
      />

      <p class="subtitle">
        Want to get in touch? Find me here:
      </p>

      <nav class="contact-links" aria-label="Contact links">
        <a class="contact-item" href="mailto:you@example.com">
          <Image width={44} height={44} class="icon" src={emailIcon} alt="" aria-hidden="true" />
          <span class="label">Email</span>
          <span class="value">you@example.com</span>
        </a>

        <a class="contact-item" href="https://github.com/szettl135" target="_blank" rel="noreferrer">
          <Image width={44} height={44} class="icon" src={githubIcon} alt="" aria-hidden="true" />
          <span class="label">GitHub</span>
          <span class="value">@szettl135</span>
        </a>

        <a class="contact-item" href="https://www.linkedin.com/in/sebastian-zettl-87b006289" target="_blank" rel="noreferrer">
          <Image width={44} height={44} class="icon" src={linkedinIcon} alt="" aria-hidden="true" />
          <span class="label">LinkedIn</span>
          <span class="value">Sebastian Zettl</span>
        </a>
      </nav>
    </section>
  </main>

  <style>
    .page {
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 48px 16px;
    }

    .container {
      width: min(720px, 100%);
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 14px;
    }

    .title {
      margin: 0;
      font-size: clamp(1.8rem, 3vw, 2.4rem);
      line-height: 1.1;
    }

    .subtitle {
      margin: 0;
      opacity: 0.8;
      max-width: 52ch;
    }

    .profile-image {
      width: 160px;
      height: 160px;
      border-radius: 999px;
      object-fit: cover;
      margin: 10px 0 6px;
      border: 3px solid rgba(0, 0, 0, 0.12);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
    }

    .contact-links {
      margin-top: 14px;
      width: 100%;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(190px, 1fr));
      gap: 12px;
    }

    .contact-item {
      display: grid;
      grid-template-columns: 28px 1fr;
      column-gap: 12px;
      row-gap: 2px;
      align-items: center;

      padding: 12px 14px;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: var(--surface);

      text-decoration: none;
      color: inherit;

      transition: transform 120ms ease, border-color 120ms ease, background 120ms ease;
    }

    .contact-item:hover {
      transform: translateY(-2px);
      border-color: var(--border);
      background: var(--bg);
    }

    .icon {
      width: 22px;
      height: 22px;
      justify-self: center;
    }

    .label {
      font-weight: 700;
      line-height: 1.2;
      text-align: left;
    }

    .value {
      grid-column: 2 / -1;
      opacity: 0.75;
      font-size: 0.95rem;
      text-align: left;
    }
  </style>
</BaseLayout>